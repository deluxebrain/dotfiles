#!/bin/bash

set -euo pipefail

echo "[Installing] Installing asdf plugins..."

# Load Homebrew environment variables only if not already loaded
if ! command -v brew &>/dev/null; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

{{ range .asdf_plugins -}}
asdf plugin add "{{ . }}"
{{ end -}}

asdf plugin update --all
