root = true

[*]
# Behaviours not supported by prettier
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Behaviours inherited by prettier
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 80

[*.py]
profile = black

[*.yaml]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[LICENSE]
insert_final_newline = false
